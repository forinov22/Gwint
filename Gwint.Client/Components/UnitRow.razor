@using Gwint.Lib
<div class="unit-row">
    @if (Cards is not null && Cards.Any())
    {
        foreach (var card in Cards)
        {
            <div class="unit-card-wrapper" @onclick="() => OnCardSelected.InvokeAsync(card.Id)">
                <div class="unit-card">
                    <img src="@card.ImageUrl" alt="@card.Name" />
                    <div class="strength-indicator">
                        @if (card is UnitCard unitCard)
                        {
                            @if (unitCard.CurrentStrength < unitCard.InitialStrength)
                            {
                                <span>
                                    <svg width="24px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="#e61924" d="M246.6 470.6c-12.5 12.5-32.8 12.5-45.3 0l-160-160c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L224 402.7 361.4 265.4c12.5-12.5 32.8-12.5 45.3 0s12.5 32.8 0 45.3l-160 160zm160-352l-160 160c-12.5 12.5-32.8 12.5-45.3 0l-160-160c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L224 210.7 361.4 73.4c12.5-12.5 32.8-12.5 45.3 0s12.5 32.8 0 45.3z"/></svg>
                                </span>
                            }
                            else if (unitCard.CurrentStrength > unitCard.InitialStrength)
                            {
                                <span>
                                    <svg width="24px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="#63E6BE" d="M246.6 41.4c-12.5-12.5-32.8-12.5-45.3 0l-160 160c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L224 109.3 361.4 246.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3l-160-160zm160 352l-160-160c-12.5-12.5-32.8-12.5-45.3 0l-160 160c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L224 301.3 361.4 438.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3z"/></svg>
                                </span>
                                
                            }
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    [Parameter] public IEnumerable<Card>? Cards { get; set; } = [];
    [Parameter] public EventCallback<string> OnCardSelected { get; set; }
}